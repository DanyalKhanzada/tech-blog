<div class="row center-align">
     <div class="col s12">
          <h2>Login to access content!</h2>
          <a id="register-btn">Not signed up yet?</a>
     </div>
</div>
<form class="col s12">
     <div class="row">
          <div class="input-field col s12 m6">
               <p>Username: </p>
               <input placeholder="Username" id="username-login" type="text">
          </div>
          <div class="input-field col s12 m6">
               <p>Password: </p>
               <input placeholder="Password" id="password-login" type="password" class="validate">
          </div>
     </div>
     </div>
     <div class="row">
          <div class="col s3 offset-s9">
               <button class="btn waves-effect waves-light" id="login-submit-button">
                    <i class="material-icons left">send</i>Submit
               </button>
          </div>
     </div>
</form>